<h2>All users</h2>
<a href="new">New user</a>
<table style="width: 90%">
	<tr>
		<th>Avatar</th>
		<th>Name</th>
		<th>Email</th>
		<th>About</th>
	</tr>
	<% if @users != nil %>
		<% @users.each do |u| %>
			<tr>
				<th><a href="images/<%= u.id %>"><img src="./images/<%= u.id %>"></a></th>
				<th><%= u.name %></th>
				<th><%= u.email %></th>
				<th><%= u.about %></th>
				<th>
					<form action="edit/<%= u.id %>" method="get">
						<input type="submit" value="Update">
					</form>
				<th>
					<form action="<%= u.id %>" method="post">
						<input type="hidden" name="_method" value="delete">
						<input type="submit" value="Delete">
					</form>
				</th>
			</tr>
		<% end %>
	<% end %>
</table>
